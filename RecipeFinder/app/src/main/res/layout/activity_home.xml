<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.android.recipefinder.HomeActivity">

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:hint="Enter Key Ingredient"
        android:id="@+id/search_entry"
        android:inputType="text" android:maxLines="1"
        android:paddingRight="60dp"
        android:imeOptions="actionSearch"
        android:layout_marginBottom="60px" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/search_button"
        android:layout_alignTop="@+id/search_entry"
        android:layout_alignBottom="@+id/search_entry"
        android:paddingBottom="2dp"
        android:layout_alignRight="@+id/search_entry"
        android:src="@android:drawable/ic_menu_search"
        android:layout_centerVertical="true"
        android:text="Search"
        android:onClick="search" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Your Favorite Recipes"
        android:id="@+id/textView"
        android:layout_below="@+id/search_button"
        android:layout_alignParentStart="true" />

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/listView"
        android:dividerHeight="5px"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView" />
</RelativeLayout>
