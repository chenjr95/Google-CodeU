<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    tools:context="com.example.android.recipefinder.RecipeActivity">

    <!-- Api progress -->
    <ProgressBar android:id="@+id/progress_view" style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:layout_marginBottom="8dp" android:visibility="gone" />

    <ScrollView android:id="@+id/recipe_view" android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout android:id="@+id/second_linear" android:layout_width="match_parent"
            android:layout_height="wrap_content" android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="30px"
                android:orientation="horizontal">
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/save_button"
                    android:text="Save"/>

                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/save_check"
                    android:layout_marginLeft="30px"/>

            </LinearLayout>

            <ImageView
                android:id="@+id/image_body"
                android:layout_marginBottom="15px"
                android:layout_width="400px"
                android:layout_height="400px" />

            <TextView android:text="Name: "
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView android:text="name_here"
                android:id="@+id/name_body"
                android:layout_marginBottom="15px"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView android:text="Cuisine: "
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView android:text="cuisine_here"
                android:id="@+id/cuisine_body"
                android:layout_marginBottom="15px"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView android:text="Cooking Method: "
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView android:text="method_here"
                android:id="@+id/method_body"
                android:layout_marginBottom="15px"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView android:text="Serves: "
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView android:text="serves_here"
                android:id="@+id/serves_body"
                android:layout_marginBottom="15px"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView android:text="Ingredients: "
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView android:text="ingredients_here"
                android:id="@+id/ingredients_body"
                android:layout_marginBottom="15px"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView android:text="Directions: "
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView android:text="directions_here"
                android:id="@+id/directions_body"
                android:layout_marginBottom="15px"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>
    </ScrollView>
</LinearLayout>